<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background = "@drawable/got"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/scroll"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:layout_marginTop="60dp">
            <TextView
                android:text="Stats"
                android:layout_width="287dp"
                android:textSize="24sp"
                android:layout_marginEnd="20dp"
                android:layout_height="match_parent"
                android:id="@+id/statsName"
                android:textStyle="normal|bold"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="55dp"
            android:id="@+id/numCards">
            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="#A52A2A"/>
            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_height="40dp"
                android:id="@+id/numRedCards" />
            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="#FF8C00"/>
            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_height="40dp"
                android:id="@+id/numOrangeCards" />
            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="#FFD700"/>
            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_height="40dp"
                android:id="@+id/numYellowCards" />
            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="#3CB371"/>
            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_height="40dp"
                android:id="@+id/numGreenCards" />
            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="#4169E1"/>
            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_height="40dp"
                android:id="@+id/numBlueCards" />
            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="#DDA0DD"/>
            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_height="40dp"
                android:id="@+id/numPurpleCards" />
            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="#000000"/>
            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_height="40dp"
                android:id="@+id/numBlackCards" />
            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="#FFFAFA"/>
            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_height="40dp"
                android:id="@+id/numWhiteCards" />
            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/rainbow"/>
            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_height="40dp"
                android:id="@+id/numWildCards" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="57dp"
                android:layout_marginEnd="40dp"
                android:id="@+id/statsMenu">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player"
                    android:layout_marginEnd="13dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Points"
                    android:layout_marginEnd="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="# Trains"
                    android:layout_marginEnd="14dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="# Cards \n Train/Dest"
                    android:layout_marginEnd="8dp"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="# Routes"
                    android:layout_marginEnd="10dp"/>

            </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/stats_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="55dp"
            android:layout_weight="0.75"/>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:gravity="bottom"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/statsToGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginStart="70dp"
                android:text="Return to Game"
                android:backgroundTint="#A52A2A"/>

            <Button
                android:id="@+id/statsToChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginStart="240dp"
                android:text="Game Chat"
                android:backgroundTint="#A52A2A"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>