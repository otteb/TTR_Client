<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fjameson.got_ttr.registerLogin.LoginFragment">
    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background = "@drawable/got"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/scroll"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:layout_marginTop="60dp">
                <TextView
                    android:text="Card View Menu"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="match_parent"
                    android:id="@+id/cardViewName" />
            </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:id="@+id/cardLayout">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="#FF8C00"
                android:layout_marginRight="5dp"
                android:id="@+id/card1CardView"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cardboarder">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/martell_sun_transparent" />
                </LinearLayout>
            </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="#FF8C00"
        android:layout_marginRight="5dp"
        android:id="@+id/card2CardView"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardboarder">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/martell_sun_transparent" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="#FF8C00"
        android:id="@+id/card3CardView"
        android:layout_marginRight="5dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardboarder">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/martell_sun_transparent" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="#FF8C00"
        android:layout_marginRight="5dp"
        android:id="@+id/card4CardView"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardboarder">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/martell_sun_transparent" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="#FF8C00"
        android:id="@+id/card5CardView"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardboarder">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/martell_sun_transparent" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_gravity="center_horizontal">

                <Button
                    android:id="@+id/cardViewToGame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:text="Return to Game"
                    android:backgroundTint="#A52A2A"/>
                <Button
                    android:id="@+id/cardViewFromTable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="160dp"
                    android:text="From Table"
                    android:backgroundTint="#A52A2A"/>

                <Button
                    android:id="@+id/cardViewFromDeck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="270dp"
                    android:text="From Deck"
                    android:backgroundTint="#A52A2A"/>

            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>

</FrameLayout>

