<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background = "@drawable/got">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/scroll"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:layout_marginTop="60dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginStart="20dp"
                    android:layout_height="match_parent"
                    android:id="@+id/cardViewName"
                    android:text="@string/train_cards"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="15dp">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:background="@drawable/rainbow"
                    android:id="@+id/cardViewCard1"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical">
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:background="@drawable/rainbow"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/cardViewCard2"
                    android:orientation="vertical">
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:background="@drawable/rainbow"
                    android:id="@+id/cardViewCard3"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical">
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:background="@drawable/rainbow"
                    android:id="@+id/cardViewCard4"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical"
                    android:layout_width="60dp">
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:background="@drawable/rainbow"
                    android:id="@+id/cardViewCard5"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="410dp"
                android:layout_height="67dp"
                android:layout_gravity="center_horizontal">

                <Button
                    android:id="@+id/cardViewFromTable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Take From Table"
                    android:backgroundTint="#A52A2A"
                    android:layout_alignBaseline="@+id/cardViewFromDeck"
                    android:layout_alignBottom="@+id/cardViewFromDeck"
                    android:layout_toEndOf="@+id/cardViewFromDeck"
                    android:layout_marginStart="7dp"/>

                <Button
                    android:id="@+id/cardViewFromDeck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="58dp"
                    android:text="Draw From Deck"
                    android:backgroundTint="#A52A2A"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"/>

            </RelativeLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:layout_gravity="center_horizontal">

                    <Button
                        android:id="@+id/cardViewToGame"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/return_to_game"
                        android:backgroundTint="#A52A2A"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:layout_gravity="center_horizontal">

                    <Button
                        android:id="@+id/cardViewSkipTurn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Skip Turn"
                        android:backgroundTint="#A52A2A"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="26dp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>

</FrameLayout>

