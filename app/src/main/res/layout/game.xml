<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@drawable/got"
    android:scaleType="fitXY"
    android:id="@+id/gameView"
    android:clickable="true"
    >
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/gameMap"
    android:background="@drawable/got"/>

    <Button
        android:id="@+id/claim"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Claim Route"
        android:backgroundTint="#A52A2A"/>
    <Button
    android:id="@+id/gameToDestCards"
    android:layout_column="0"
    android:layout_row="3"
        android:layout_marginLeft="120dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Dest Cards"
    android:backgroundTint="#A52A2A"/>

    <Button
    android:id="@+id/gameToTrainCards"
    android:layout_column="0"
    android:layout_row="3"
        android:layout_marginLeft="230dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Train Cards"
    android:backgroundTint="#A52A2A"/>


    <ImageButton
        android:id="@+id/stats"
        android:layout_column="0"
        android:layout_row="3"
        android:src="@drawable/rightarrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Stats"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:backgroundTint="#A52A2A"/>

    <Button
        android:text="Simulate Turn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="16dp"/>

